<Page
	x:Class="ImagePicker.Views.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:views="using:PicturePicker.Views"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="2*" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>

		<!--  App title  -->
		<TextBlock
			Grid.Row="0"
			HorizontalAlignment="Center"
			FontSize="40"
			FontWeight="Bold"
			Text="Image Picker" />

		<!--  Section to select a file  -->
		<views:ImageSelectionPage Grid.Row="1" ViewModel="{x:Bind ViewModel}" />

		<!--  Section to display file info  -->
		<views:ImageDetailsPage Grid.Row="2" ViewModel="{x:Bind ViewModel}" />
	</Grid>
</Page>
